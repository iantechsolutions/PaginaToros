                    var socioVendedor = socios.Where(x => x.Scod == oEstablecimientoPrevio.Codsoc).FirstOrDefault();
                    var socioComprador = socios.Where(x => x.Scod == oEstablecimiento.Codsoc).FirstOrDefault();
