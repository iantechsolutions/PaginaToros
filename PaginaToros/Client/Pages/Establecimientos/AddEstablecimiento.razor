    bool ValidateModel()
    {
        messageStore.Clear();
        bool valid = true;

        // Socio
        if (socioSeleccionado == null && string.IsNullOrWhiteSpace(oEstablecimiento.Codsoc))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Codsoc)), "Debe seleccionar un socio.");
            valid = false;
        }

        // Ecod
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Ecod))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Ecod)), "El codigo es obligatorio.");
            valid = false;
        }

        // Nombre
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Nombre))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Nombre)), "El nombre es obligatorio.");
            valid = false;
        }

        // Encargado
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Encargado))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Encargado)), "El encargado es obligatorio.");
            valid = false;
        }

        // Direcc
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Direcc))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Direcc)), "El domicilio es obligatorio.");
            valid = false;
        }

        // Tel
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Tel))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Tel)), "El teléfono es obligatorio.");
            valid = false;
        }

        // Codpos
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Codpos))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Codpos)), "El codigo postal es obligatorio.");
            valid = false;
        }

        // Provincia (Codpro)
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Codpro))
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Codpro)), "La provincia es obligatoria.");
            valid = false;
        }

        // Codzon
        if (string.IsNullOrWhiteSpace(oEstablecimiento.Codzon) || oEstablecimiento.Codzon.Length < 2)
        {
            messageStore.Add(new FieldIdentifier(oEstablecimiento, nameof(oEstablecimiento.Codzon)), "El codigo de zona es obligatorio.");
            valid = false;
        }

        editContext.NotifyValidationStateChanged();
        return valid;
    }

    private void ValidateField(FieldIdentifier fi)
    {
        messageStore.Clear(fi);

        switch (fi.FieldName)
        {
            case nameof(oEstablecimiento.Codsoc):
                if (socioSeleccionado == null && string.IsNullOrWhiteSpace(oEstablecimiento.Codsoc))
                    messageStore.Add(fi, "Debe seleccionar un socio.");
                break;
            case nameof(oEstablecimiento.Ecod):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Ecod))
                    messageStore.Add(fi, "El codigo es obligatorio.");
                break;
            case nameof(oEstablecimiento.Nombre):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Nombre))
                    messageStore.Add(fi, "El nombre es obligatorio.");
                break;
            case nameof(oEstablecimiento.Encargado):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Encargado))
                    messageStore.Add(fi, "El encargado es obligatorio.");
                break;
            case nameof(oEstablecimiento.Direcc):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Direcc))
                    messageStore.Add(fi, "El domicilio es obligatorio.");
                break;
            case nameof(oEstablecimiento.Tel):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Tel))
                    messageStore.Add(fi, "El teléfono es obligatorio.");
                break;
            case nameof(oEstablecimiento.Codpos):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Codpos))
                    messageStore.Add(fi, "El codigo postal es obligatorio.");
                break;
            case nameof(oEstablecimiento.Codpro):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Codpro))
                    messageStore.Add(fi, "La provincia es obligatoria.");
                break;
            case nameof(oEstablecimiento.Codzon):
                if (string.IsNullOrWhiteSpace(oEstablecimiento.Codzon) || oEstablecimiento.Codzon.Length < 2)
                    messageStore.Add(fi, "El codigo de zona es obligatorio.");
                break;
            default:
                break;
        }

        editContext.NotifyValidationStateChanged();
    }

