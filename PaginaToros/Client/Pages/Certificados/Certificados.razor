@code {
    [CascadingParameter] public IModalService Modal { get; set; } = default!;
    public RadzenDataGrid<ClaseTabla>? grid;
    int currentPage;
    public bool allowFiltering = false;
    public string Url = "/api/Certifseman";
    List<Centrosium> centros = new();
    List<ClaseTabla> listaMerged = new();
    List<Socio> socios = new();
    public Respuesta<List<Certifseman>> oRespuesta = new Respuesta<List<Certifseman>>();
    protected override async Task OnInitializedAsync()
    {
        var rta = await Http.GetFromJsonAsync<Respuesta<List<Socio>>>("/api/Socio");
        socios = rta.List;
        var rt = await Http.GetFromJsonAsync<Respuesta<List<Centrosium>>>("/api/Centrosium");
        centros = rt.List;
        await Get();
    }
    async Task Get()
    {
        var jsonSerializerOptions = new JsonSerializerOptions
        {
            Converters = { new PaginaToros.Shared.JsonConversor.DateOnlyJsonConverter() }
        };

        var respuesta = await Http.GetFromJsonAsync<Respuesta<List<Certifseman>>>("/api/Certifseman");
        respuesta.List = respuesta.List.OrderByDescending(x => x.Id).ToList();
        oRespuesta = respuesta;

        listaMerged = oRespuesta.List.Select(cert => new ClaseTabla
            {
                Id = cert.Id,
                Tipo = cert.TipoCert,
                FechaVenta = cert.Fecvta,
                NombreCentro = centros.FirstOrDefault(x => x.Nrocen == cert.Nrocen)?.Nombre,
                NombreSocio = socios.FirstOrDefault(x => x.Scod == cert.Scod)?.Nombre,
                Tatuaje = cert.Tatpart,
                HBA = cert.Hba,
                Nombre = cert.NomDad,
                ADN = cert.NrTsan,
                NroMacho = cert.NrInsd,
                CantDosi = cert.NrDosi,
                CantDosiOr = cert.NrDosiOr,
                Envase = cert.TipEnv,
                Variedad = cert.Variedad,
            }).ToList();

        StateHasChanged();
    }
    public void CambiarModoFiltro()
    {
        allowFiltering = !allowFiltering;
        StateHasChanged();
    }

    async Task delete(int id)
    {
        currentPage = grid.CurrentPage;
        await Http.DeleteAsync($"/api/Certifseman/{id}");
        await Get();
        if (currentPage >= grid.Count / grid.PageSize && grid.Count != 0)
        {
            await grid.GoToPage(currentPage - 1);
        }
        else if (grid.Count != 0)
        {
            await grid.GoToPage(currentPage);
        }

    }

    public async Task alertaDelete(int id)
    {
        SweetAlertResult result = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "¿Está seguro?",
                Text = "Se eliminará este certificado",
                Icon = SweetAlertIcon.Warning,
                ShowCancelButton = true,
                ConfirmButtonText = "Eliminar",
                CancelButtonText = "Cancelar"
            });

        if (!string.IsNullOrEmpty(result.Value))
        {
            delete(id);

        }
        else if (result.Dismiss == DismissReason.Cancel)
        {

        }
    }

    async Task add(int Id)
    {
        int numero = Id;
        if (numero != 0)
        {
            currentPage = grid.CurrentPage;
            try
            {
                var parameters = new ModalParameters();
                parameters.Add(nameof(AddCertificado.Id), Id);
                var options = new ModalOptions()
                    {
                        Size = ModalSize.ExtraLarge
                    };
                var formModal = Modal.Show<AddCertificado>("Editar Certificado", parameters, options);
                var result = await formModal.Result;
                if (result.Cancelled)
                {
                    Console.WriteLine("Modal was cancelled");
                    await grid.GoToPage(currentPage);
                }
                else
                {
                    await Get();
                    await grid.GoToPage(currentPage);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine(ex.Message);
            }
        }
        else
        {
            var options = new ModalOptions()
                {
                    Size = ModalSize.ExtraLarge
                };
            var formModal = Modal.Show<AddCertificado>("Agregar Certificado", options);
            var result = await formModal.Result;

            if (result.Cancelled)
            {
                Console.WriteLine("Modal was cancelled");
                await grid.GoToPage(currentPage);
            }
            else
            {
                await Get();
                await grid.GoToPage(currentPage);
            }
        }
    }
