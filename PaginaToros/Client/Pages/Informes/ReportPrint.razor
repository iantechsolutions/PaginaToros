                    </td>
                    <td>
                        <p class="s2">HBA</p>
                    </td>
                    <td>
                        <p class="s2">Nombre</p>
                    </td>
                    <td>
                        <p class="s2">Cant Dosis</p>
                    </td>
                    <td>
                        <p class="s2">Cant Dosis Reman</p>
                    </td>
                    <td>
                        <p class="s2">Variedad</p>
                    </td>

                </tr>
                @foreach (var cer in certificados)
                {
                <tr style="font-size: 5px!important;">
                        <td>
                        <p class ="s2">@cer.TipoCert</p>
                        </td>
                        <td>
                        <p class="s2">@cer.NroCert</p>
                        </td>
                        <td>
                        <p class="s2">@cer.Centro.Nombre</p>
                        </td>
                        <td>
                            @if (cer.Fecvta.HasValue)
                            {
                                <p>@cer.Fecvta.Value.ToString("dd/MM/yyyy")</p>
                            }
                            else
                            {
                                <p></p>
                            }
                        </td>
                        <td>
                        <p class="s2">@cer.Socio.Nombre</p>
                        </td>
                        <td>
                        <p class="s2">@cer.Tatpart</p>
