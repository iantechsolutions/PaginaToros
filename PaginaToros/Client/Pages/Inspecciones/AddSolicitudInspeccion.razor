                                </div>
                                <div class="col-sm">
                                    <label class="col-sm">Vacas Vip</label><br />
                                    <InputNumber @bind-Value="@soli.Canvac" class="form-control" placeholder="Cantidad" disabled="@esSocio"></InputNumber>
