                    soliAux.Cantor = data.Cantor;
                    soliAux.Cantvq = data.Cantvq;
                    soliAux.Canvac = data.Canvac;
                    soliAux.Canvaq = data.Canvaq;
                    soliAux.Anio = data.Anio;
                    soliAux.IdSoli = oSolici1.Id;
                    await _solici1AuxServicio.Crear(soliAux);
