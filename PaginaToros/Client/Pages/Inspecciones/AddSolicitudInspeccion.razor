                    soliAux.Cantor = data.Cantor;
                    soliAux.Cantvq = data.Cantvq;
                    soliAux.Canvac = data.Canvac;
                    soliAux.Canvaq = data.Canvaq;
                    soliAux.Anio = data.Anio;
                    await _solici1AuxServicio.Editar(soliAux);
                }
            }

            }
        finally
        {
            cargando = false;
        }
    }






    private async Task<bool> ValidateBeforeSave()
    {
        // 1) Establecimiento
        if (establecimientoSeleccionado == null || string.IsNullOrWhiteSpace(establecimientoSeleccionado.Ecod))
        {
            await Swal.FireAsync("Error", "Debe seleccionar un establecimiento.", SweetAlertIcon.Error);
            return false;
        }

        // También aseguramos “completo”
        if (EstableInvalido(establecimientoSeleccionado))
        {
            await Swal.FireAsync("Error",
                "El establecimiento seleccionado no tiene provincia o código de zona. Debe corregirse antes de continuar.",
                SweetAlertIcon.Error);
            return false;
        }

        // 2) Fecha solicitud
        if (!oSolici1.Fecsol.HasValue)
        {
            await Swal.FireAsync("Error", "Debe ingresar la fecha de solicitud.", SweetAlertIcon.Error);
            return false;
        }

        // 3) Fecha autorización (FechaTemp)
        if (FechaTemp == default)
        {
            await Swal.FireAsync("Error", "Debe ingresar la fecha de autorización.", SweetAlertIcon.Error);
            return false;
        }

        // 4) Mínimo una soli
        if (listadoSolicitudes == null || listadoSolicitudes.Count == 0)
        {
            await Swal.FireAsync("Error", "Debe ingresar al menos una solicitud (una fila).", SweetAlertIcon.Error);
            return false;
        }

        // 5) Año obligatorio en cada soli
        for (int i = 0; i < listadoSolicitudes.Count; i++)
        {
            var anio = listadoSolicitudes[i]?.Anio?.Trim();

            if (string.IsNullOrWhiteSpace(anio))
            {
                await Swal.FireAsync("Error", $"El campo Año es obligatorio en la fila #{i + 1}.", SweetAlertIcon.Error);
                return false;
            }

            // opcional: validar formato año (4 dígitos)
            if (anio.Length != 4 || !int.TryParse(anio, out var _))
            {
                await Swal.FireAsync("Error", $"El Año de la fila #{i + 1} debe tener 4 dígitos (ej: 2026).", SweetAlertIcon.Error);
                return false;
            }
        }

        return true;
    }



        public class ChangeNotificationModel
        {
            public string Id { get; set; }
            public string Tipo { get; set; }
            public string Clase { get; set; }
            public string Detalle { get; set; }
        }

    private bool EstableInvalido(EstableDTO e)
    {
        return e == null
            || string.IsNullOrWhiteSpace(e.Codpro)
            || string.IsNullOrWhiteSpace(e.Codzon)
            || e.Codzon.Trim().Length < 2;
    }


    private async Task OnEstablecimientoChanged(EstableDTO e)
    {
        if (EstableInvalido(e))
        {
            establecimientoSeleccionado = new EstableDTO();
            oSolici1.Codest = null;

            await Swal.FireAsync("Atención",
                "No se pueden seleccionar establecimientos sin provincia ni codigo de zona.",
                SweetAlertIcon.Warning);

            return;
        }

        establecimientoSeleccionado = e;
        oSolici1.Codest = e.Ecod;

    }



