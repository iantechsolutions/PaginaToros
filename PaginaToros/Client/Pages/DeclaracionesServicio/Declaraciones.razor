                <RadzenDataGridColumn TItem="Desepla1" Property="" Title="Socio" Width="7.34%">
                    <Template Context="data">
                        @(socios.Where(x => x.Scod == data.Nrocri).FirstOrDefault().Nombre)
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Desepla1" Property="Desde" Title="Desde" Width="4.6%">
                    <Template Context="data">
                        @if(data.Desde.HasValue){
                            <a>@data.Desde.Value.ToString("dd/MM/yyyy")</a>
                        }
                        else{

                        }
                    </Template>     
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Desepla1" Property="Hasta" Title="Hasta" Width="4.6%">
                    <Template Context="data">
                        @if (data.Hasta.HasValue)
                        {
                            <a>@data.Hasta.Value.ToString("dd/MM/yyyy")</a>
                        }
                        else
                        {

                        }
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Desepla1" Property="Fchrecepcion" Title="Fecha de recepcion" Width="4.6%">
                    <Template Context="data">
                        @if (data.Fchrecepcion.HasValue)
                        {
                            <a>@data.Fchrecepcion.Value.ToString("dd/MM/yyyy")</a>
                        }
                        else
                        {

                        }
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Desepla1" Property="Tipse" Title="Tipo de servicio" Width="5%" />

                <RadzenDataGridColumn TItem="Desepla1" Property="" Title="" Filterable="false" Width="3.33%">
                    <Template Context="data">
                        <button class="btn" position="absolute" title="Editar Declaracion" @onclick="() => add(data.Id)"><FeatherEdit Size="16" Color="green" /></button>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Desepla1" Property="" Title="" Filterable="false" Width="3.33%">
                    <Template Context="data">
                        <button class="btn" title="Eliminar" @onclick="() => alertaDelete(data.Id)"><FeatherTrash2 Size="16" Color="red" /></button>
                    </Template>
                </RadzenDataGridColumn>
